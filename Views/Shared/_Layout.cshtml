    <!-- Scripts -->
    <script>
        AOS.init();

        document.addEventListener('DOMContentLoaded', function() {
            const menuBtn = document.getElementById('menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');

            // Apps dropdown desktop
            const appsDropdownBtn = document.getElementById('apps-dropdown-btn');
            const appsDropdown = document.getElementById('apps-dropdown');

            // Apps dropdown tablet
            const appsDropdownBtnTablet = document.getElementById('apps-dropdown-btn-tablet');
            const appsDropdownTablet = document.getElementById('apps-dropdown-tablet');

            // User dropdown desktop
            const userDropdownBtn = document.getElementById('user-dropdown-btn');
            const userDropdown = document.getElementById('user-dropdown');

            // User dropdown tablet
            const userDropdownBtnTablet = document.getElementById('user-dropdown-btn-tablet');
            const userDropdownTablet = document.getElementById('user-dropdown-tablet');

            // Mobile menu toggle
            if (menuBtn && mobileMenu) {
                menuBtn.addEventListener('click', function() {
                    mobileMenu.classList.toggle('show');
                    menuBtn.classList.toggle('active');
                    if (mobileMenu.classList.contains('show')) {
                        mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
                    } else {
                        mobileMenu.style.maxHeight = '0px';
                    }
                });
            }

            // Apps dropdown desktop
            if (appsDropdownBtn && appsDropdown) {
                appsDropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    appsDropdown.classList.toggle('dropdown-show');
                    // Close other dropdowns
                    if (userDropdown) userDropdown.classList.remove('dropdown-show');
                    if (appsDropdownTablet) appsDropdownTablet.classList.remove('dropdown-show');
                    if (userDropdownTablet) userDropdownTablet.classList.remove('dropdown-show');
                });
            }

            // Apps dropdown tablet
            if (appsDropdownBtnTablet && appsDropdownTablet) {
                appsDropdownBtnTablet.addEventListener('click', function(e) {
                    e.stopPropagation();
                    appsDropdownTablet.classList.toggle('dropdown-show');
                    // Close other dropdowns
                    if (appsDropdown) appsDropdown.classList.remove('dropdown-show');
                    if (userDropdown) userDropdown.classList.remove('dropdown-show');
                    if (userDropdownTablet) userDropdownTablet.classList.remove('dropdown-show');
                });
            }

            // User dropdown desktop
            if (userDropdownBtn && userDropdown) {
                userDropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('dropdown-show');
                    // Close other dropdowns
                    if (appsDropdown) appsDropdown.classList.remove('dropdown-show');
                    if (appsDropdownTablet) appsDropdownTablet.classList.remove('dropdown-show');
                    if (userDropdownTablet) userDropdownTablet.classList.remove('dropdown-show');
                });
            }

            // User dropdown tablet
            if (userDropdownBtnTablet && userDropdownTablet) {
                userDropdownBtnTablet.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdownTablet.classList.toggle('dropdown-show');
                    // Close other dropdowns
                    if (appsDropdown) appsDropdown.classList.remove('dropdown-show');
                    if (appsDropdownTablet) appsDropdownTablet.classList.remove('dropdown-show');
                    if (userDropdown) userDropdown.classList.remove('dropdown-show');
                });
            }

            // Close dropdowns when clicking outside
            document.addEventListener('click', function(event) {
                // Close mobile menu
                if (menuBtn && mobileMenu && !menuBtn.contains(event.target) && !mobileMenu.contains(event.target)) {
                    mobileMenu.classList.remove('show');
                    menuBtn.classList.remove('active');
                    mobileMenu.style.maxHeight = '0px';
                }

                // Close all dropdowns
                if (appsDropdown && !appsDropdownBtn?.contains(event.target) && !appsDropdown.contains(event.target)) {
                    appsDropdown.classList.remove('dropdown-show');
                }
                if (appsDropdownTablet && !appsDropdownBtnTablet?.contains(event.target) && !appsDropdownTablet.contains(event.target)) {
                    appsDropdownTablet.classList.remove('dropdown-show');
                }
                if (userDropdown && !userDropdownBtn?.contains(event.target) && !userDropdown.contains(event.target)) {
                    userDropdown.classList.remove('dropdown-show');
                }
                if (userDropdownTablet && !userDropdownBtnTablet?.contains(event.target) && !userDropdownTablet.contains(event.target)) {
                    userDropdownTablet.classList.remove('dropdown-show');
                }
            });

            // Close mobile menu when clicking on a link
            if (mobileMenu) {
                const mobileLinks = mobileMenu.querySelectorAll('a');
                mobileLinks.forEach(link => {
                    link.addEventListener('click', function() {
                        mobileMenu.classList.remove('show');
                        if (menuBtn) menuBtn.classList.remove('active');
                        mobileMenu.style.maxHeight = '0px';
                    });
                });
            }

            // Handle window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 768) {
                    if (mobileMenu) {
                        mobileMenu.classList.remove('show');
                        mobileMenu.style.maxHeight = '0px';
                    }
                    if (menuBtn) menuBtn.classList.remove('active');
                }
                // Close all dropdowns on resize
                if (appsDropdown) appsDropdown.classList.remove('dropdown-show');
                if (appsDropdownTablet) appsDropdownTablet.classList.remove('dropdown-show');
                if (userDropdown) userDropdown.classList.remove('dropdown-show');
                if (userDropdownTablet) userDropdownTablet.classList.remove('dropdown-show');
            });

            // Escape key to close dropdowns
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    if (appsDropdown) appsDropdown.classList.remove('dropdown-show');
                    if (appsDropdownTablet) appsDropdownTablet.classList.remove('dropdown-show');
                    if (userDropdown) userDropdown.classList.remove('dropdown-show');
                    if (userDropdownTablet) userDropdownTablet.classList.remove('dropdown-show');
                    if (mobileMenu) {
                        mobileMenu.classList.remove('show');
                        mobileMenu.style.maxHeight = '0px';
                    }
                    if (menuBtn) menuBtn.classList.remove('active');
                }
            });
        });

        // Loading screen function
        function showLogoutScreen() {
            document.getElementById("loadingScreen").classList.remove("hidden");
            setTimeout(function() {
                window.location.href = "/auth/logout";
            }, 3000);
        }

        // Professional notification function
        function showProfessionalNotification(message, type = "success") {
            const notification = document.createElement('div');
            notification.className = `fixed top-32 right-4 p-6 rounded-2xl shadow-2xl transition-all duration-500 transform -translate-y-20 opacity-0 z-50 max-w-md ${
                type === "success" ?
                    "bg-gradient-to-r from-green-50 to-emerald-50 border-l-4 border-green-500 text-green-800" :
                    "bg-gradient-to-r from-red-50 to-rose-50 border-l-4 border-red-500 text-red-800"
            }`;

            notification.innerHTML = `
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        ${type === "success" ?
                            `<div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                                <svg class="h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>` :
                            `<div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                                <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>`
                        }
                    </div>
                    <div class="ml-4 flex-1">
                        <p class="font-semibold">${type === "success" ? "Succès" : "Erreur"}</p>
                        <p class="text-sm mt-1 opacity-90">${message}</p>
                    </div>
                    <div class="ml-4">
                        <button class="close-notification text-gray-400 hover:text-gray-600 transition-colors duration-200">
                            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                </div>
            `;

            document.body.appendChild(notification);

            // Show notification
            setTimeout(() => {
                notification.classList.remove('-translate-y-20', 'opacity-0');
            }, 10);

            // Close functionality
            notification.querySelector('.close-notification').addEventListener('click', () => {
                notification.classList.add('-translate-y-20', 'opacity-0');
                setTimeout(() => {
                    notification.remove();
                }, 500);
            });

            // Auto-hide after 5 seconds
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.classList.add('-translate-y-20', 'opacity-0');
                    setTimeout(() => {
                        notification.remove();
                    }, 500);
                }
            }, 5000);
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
