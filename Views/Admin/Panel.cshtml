            <a href="?tab=monitoring"
               class="sidebar-item group flex items-center px-6 py-4 rounded-xl transition-all duration-300 font-semibold text-lg
                      @(activeTab == "monitoring"
                        ? "bg-gradient-to-r from-[#742774] to-[#FFCC00] text-white shadow-lg transform scale-105"
                        : "text-white/80 hover:text-white hover:bg-white/10")">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:bg-white/20 transition-all duration-300 border border-white/20">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                        </svg>
                    </div>
                    <span>Monitoring</span>
                </div>
                @if (activeTab == "monitoring")
                {
                    <div class="absolute right-0 top-1/2 transform -translate-y-1/2 w-1 h-8 bg-white rounded-l-full"></div>
                }
            </a>
            -->
        </nav>
    </aside>

    <!-- Main Content Area -->
    <main class="ml-80 flex-1 min-h-screen">
        <!-- Content Background -->
        <div class="relative min-h-screen">
            <!-- Glass Content Container -->
            <div class="relative z-10 p-8">
                @{
                    var tab = Context.Request.Query["tab"].ToString();
                    switch (tab)
                    {
                        case "config":
                            <div class="max-w-6xl mx-auto">
                                <!-- Content will have glass effect applied in partials -->
                                <partial name="_ConfigPartial" />
                            </div>
                            break;

                        case "dashboard":
                            <div class="max-w-7xl mx-auto">
                                <!-- Content will have glass effect applied in partials -->
                                <partial name="_DashboardPartial" />
                            </div>
                            break;

                        case "monitoring":
                            <div class="max-w-7xl mx-auto">
                                <!-- Content will have glass effect applied in partials -->
                                <partial name="_MonitoringPartial" />
                            </div>
                            break;

                        default:
                            <div class="max-w-6xl mx-auto">
                                <!-- Content will have glass effect applied in partials -->
                                <partial name="_ConfigPartial" />
                            </div>
                            break;
                    }
                }
            </div>
        </div>
    </main>
</div>