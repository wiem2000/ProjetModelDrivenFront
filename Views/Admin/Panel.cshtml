@{
    ViewData["Title"] = "Espace Administrateur";
    var activeTab = Context.Request.Query["tab"].ToString();
}


<!-- Dynamic Background with Glass Morphism -->
<div class="fixed inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden">
    <!-- EY Logo Background -->
    <div class="absolute inset-0 flex items-center justify-center opacity-5">
        <img src="/videos/logo.gif" alt="EY Logo Background" class="w-96 h-96 object-contain animate-pulse" />
    </div>

    <!-- Subtle grid pattern -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.3) 1px, transparent 0); background-size: 40px 40px;"></div>

    <!-- Floating orbs with blur effect -->
    <div class="absolute top-20 right-1/4 w-72 h-72 bg-gradient-to-r from-[#742774]/20 to-[#FFCC00]/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-32 left-1/4 w-96 h-96 bg-gradient-to-r from-[#FFCC00]/15 to-[#742774]/15 rounded-full blur-3xl animate-pulse delay-1000"></div>

    <!-- Geometric accent lines -->
    <div class="absolute top-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-[#742774]/30 to-transparent"></div>
    <div class="absolute bottom-1/3 left-0 w-full h-px bg-gradient-to-r from-transparent via-[#FFCC00]/30 to-transparent"></div>

    <!-- Additional floating shapes -->
    <div class="absolute top-20 left-20 w-96 h-96 bg-[#742774]/10 rounded-full mix-blend-screen filter blur-3xl animate-float"></div>
    <div class="absolute top-40 right-20 w-80 h-80 bg-[#FFCC00]/15 rounded-full mix-blend-screen filter blur-2xl animate-float-delayed"></div>
    <div class="absolute bottom-20 left-40 w-72 h-72 bg-[#742774]/12 rounded-full mix-blend-screen filter blur-xl animate-float"></div>
</div>

<div class="relative z-10 min-h-screen flex mt-20">
    <!-- Ultra Modern Sidebar with Glass Effect -->
    <aside class="fixed top-0 left-0 w-80 h-screen flex flex-col shadow-2xl z-50">
        <!-- Sidebar Background with Glass Effect -->
        <div class="absolute inset-0 bg-white/10 backdrop-blur-xl border-r border-white/20"></div>

        <!-- Header Section -->
        <div class="relative z-10 p-8 border-b border-white/20">
            <!-- Logo Section -->
            <div class="flex items-center justify-center mb-5 mt-24">
                <div class="relative">
                    <img src="/videos/logo.gif" alt="EY Logo" class="w-32 h-32 animate-pulse rounded-lg" />
                    <div class="absolute -inset-2 bg-gradient-to-r from-[#742774]/20 to-[#FFCC00]/20 rounded-lg blur-sm"></div>
                </div>
            </div>

            <!-- Title -->
            <h4 class="text-3xl font-extrabold text-center text-white">Admin Panel</h4>
        </div>

        <!-- Navigation -->
        <nav class="relative z-10 flex-1 p-6 space-y-3">
            <a href="?tab=config"
               class="sidebar-item group flex items-center px-6 py-4 rounded-xl transition-all duration-300 font-semibold text-lg
                      @(activeTab == "config" || string.IsNullOrEmpty(activeTab)
                        ? "bg-gradient-to-r from-[#742774] to-[#FFCC00] text-white shadow-lg transform scale-105"
                        : "text-white/80 hover:text-white hover:bg-white/10")">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:bg-white/20 transition-all duration-300 border border-white/20">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.325.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 0 1 1.37.49l1.296 2.247a1.125 1.125 0 0 1-.26 1.431l-1.003.827c-.293.241-.438.613-.43.992a7.723 7.723 0 0 1 0 .255c-.008.378.137.75.43.991l1.004.827c.424.35.534.955.26 1.43l-1.298 2.247a1.125 1.125 0 0 1-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.47 6.47 0 0 1-.22.128c-.331.183-.581.495-.644.869l-.213 1.281c-.09.543-.56.94-1.11.94h-2.594c-.55 0-1.019-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 0 1-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 0 1-1.369-.49l-1.297-2.247a1.125 1.125 0 0 1 .26-1.431l1.004-.827c.292-.24.437-.613.43-.991a6.932 6.932 0 0 1 0-.255c.007-.38-.138-.751-.43-.992l-1.004-.827a1.125 1.125 0 0 1-.26-1.43l1.297-2.247a1.125 1.125 0 0 1 1.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.086.22-.128.332-.183.582-.495.644-.869l.214-1.28Z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                        </svg>
                    </div>
                    <span>Configuration</span>
                </div>
                @if (activeTab == "config" || string.IsNullOrEmpty(activeTab))
                {
                    <div class="absolute right-0 top-1/2 transform -translate-y-1/2 w-1 h-8 bg-white rounded-l-full"></div>
                }
            </a>

            <a href="?tab=dashboard"
               class="sidebar-item group flex items-center px-6 py-4 rounded-xl transition-all duration-300 font-semibold text-lg
                      @(activeTab == "dashboard"
                        ? "bg-gradient-to-r from-[#742774] to-[#FFCC00] text-white shadow-lg transform scale-105"
                        : "text-white/80 hover:text-white hover:bg-white/10")">
                <div class="flex items-center space-x-4">
                    <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-sm flex items-center justify-center group-hover:bg-white/20 transition-all duration-300 border border-white/20">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 0 1 3 19.875v-6.75ZM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V8.625ZM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 0 1-1.125-1.125V4.125Z" />
                        </svg>
                    </div>
                    <span>Dashboard</span>
                </div>
                @if (activeTab == "dashboard")
                {
                    <div class="absolute right-0 top-1/2 transform -translate-y-1/2 w-1 h-8 bg-white rounded-l-full"></div>
                }
            </a>
