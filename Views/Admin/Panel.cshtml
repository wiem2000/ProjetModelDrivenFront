@{
    ViewData["Title"] = "Espace Administrateur";
    var activeTab = Context.Request.Query["tab"].ToString();
}

<div class="fixed top-0 left-0 w-full h-[112px] bg-black z-30"></div>

<div class="min-h-screen flex bg-gray-100">
    <!-- Sidebar -->
   

    <aside class="fixed top-0 left-0 w-80 bg-black text-white flex flex-col p-6 space-y-6 shadow-lg h-[100vh] z-40">
        <h4 class="text-3xl font-extrabold mb-6 pt-[112px] text-center">Admin Panel</h4>
        <nav class="flex flex-col space-y-2 text-lg">
            <a href="?tab=config"
               class="px-4 py-3 rounded-l-lg transition font-semibold
           @(activeTab == "config" || string.IsNullOrEmpty(activeTab)
                ? "bg-white text-black border-l-4 border-[#FFCC00]"
                : "hover:text-[#FFCC00]")">
                ⚙️ Configuration
            </a>

            <a href="?tab=dashboard"
               class="px-4 py-3 rounded-l-lg transition font-semibold
           @(activeTab == "dashboard"
                ? "bg-white text-black border-l-4 border-[#FFCC00]"
                : "hover:text-[#FFCC00]")">
                📊 Dashboard
            </a>

            <a href="?tab=monitoring"
               class="px-4 py-3 rounded-l-lg transition font-semibold
           @(activeTab == "monitoring"
                ? "bg-white text-black border-l-4 border-[#FFCC00]"
                : "hover:text-[#FFCC00]")">
                🔍 Monitoring
            </a>
        </nav>
    </aside>


    <!-- Main Content -->
    <main class="ml-80 mt-[112px] p-10">
        @{
            var tab = Context.Request.Query["tab"].ToString();
            switch (tab)
            {
                case "config":



                    <div class="flex justify-center">
                        <partial name="_ConfigPartial" />
                    </div>


                    break;

                case "dashboard":


                   
                    break;

                case "monitoring":
                    <partial name="_MonitoringPartial" />
                    break;
                default:
                    <div class="flex justify-center">
                        <partial name="_ConfigPartial" />
                    </div>
                    break;
            }
        }
    </main>
</div>
